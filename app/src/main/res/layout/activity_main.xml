<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fed255"
    xmlns:yk="http://schemas.android.com/apk/res-auto"
    tools:context="com.yk.leafloadview.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="loading ..."
        android:textColor="#FFA800"
        android:textSize="30dp" />
    <RelativeLayout
        android:layout_width="302dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
    <com.yk.leafloadview.LeafLoadView
        android:id="@+id/leafview"
        android:layout_width="300dp"
        android:layout_height="60dp"
        yk:backgroundColor="#fdf0c8"
        yk:borderColor="#fddd84"
        yk:seekColor="#fcc11d"
        yk:circleColor="#ffffff"
        yk:borderWidth="18"
        yk:circleWidth="8"
        yk:rotationSpeed="200"
        yk:circleLeftStyle="false"/>
    <ImageView
        android:id="@+id/fan_p"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:src="@drawable/fengshan" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="302dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <com.yk.leafloadview.LeafLoadView
            android:id="@+id/leafview_1"
            android:layout_width="300dp"
            android:layout_height="60dp"
            yk:backgroundColor="#fdf0c8"
            yk:borderColor="#fddd84"
            yk:seekColor="#fcc11d"
            yk:circleColor="#ffffff"
            yk:borderWidth="20"
            yk:circleWidth="10"
            yk:rotationSpeed="1000"
            yk:circleLeftStyle="true"/>
        <ImageView
            android:id="@+id/fan_p1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/fengshan" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="302dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <com.yk.leafloadview.LeafLoadView
            android:id="@+id/leafview_2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            yk:backgroundColor="#3e3e3e"
            yk:borderColor="#6b6b6b"
            yk:seekColor="#65f765"
            yk:circleColor="#747474"
            yk:borderWidth="20"
            yk:circleWidth="10"
            yk:rotationSpeed="100"
            yk:circleLeftStyle="false"/>
        <ImageView
            android:id="@+id/fan_p2"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:src="@drawable/gift_10" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="302dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <com.yk.leafloadview.LeafLoadView
            android:id="@+id/leafview_3"
            android:layout_width="300dp"
            android:layout_height="30dp"
            yk:backgroundColor="#03f5e3"
            yk:borderColor="#affaf6"
            yk:seekColor="#1d51fc"
            yk:circleColor="#ffffff"
            yk:borderWidth="20"
            yk:circleWidth="8"
            yk:rotationSpeed="1000"
            yk:circleLeftStyle="false"/>
        <ImageView
            android:id="@+id/fan_p3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/fengshan" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="302dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <com.yk.leafloadview.LeafLoadView
            android:id="@+id/leafview_4"
            android:layout_width="300dp"
            android:layout_height="80dp"
            yk:backgroundColor="#fdf0c8"
            yk:borderColor="#fddd84"
            yk:seekColor="#fc1d2c"
            yk:circleColor="#ffffff"
            yk:borderWidth="30"
            yk:circleWidth="15"
            yk:rotationSpeed="1000"
            yk:circleLeftStyle="true"/>
        <ImageView
            android:id="@+id/fan_p4"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/fengshan" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="302dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>
